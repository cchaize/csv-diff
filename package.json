{
    "name": "csv-diff-viewer",
    "displayName": "CSV Diff Viewer",
    "description": "Compare CSV files and visualize differences (added/removed/moved columns and rows)",
    "version": "0.0.1",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "keywords": [
        "csv",
        "diff",
        "compare",
        "git",
        "changes"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/cchaize/csv-diff.git"
    },
    "homepage": "https://github.com/cchaize/csv-diff",
    "bugs": {
        "url": "https://github.com/cchaize/csv-diff/issues"
    },
    "publisher": "cchaize",
    "activationEvents": [
        "onView:csvDiffView",
        "onCommand:csvDiffViewer.refresh",
        "onCommand:csvDiffViewer.showDiff",
        "onCommand:csvDiffViewer.showStagedDiff",
        "onCommand:csvDiffViewer.showConflictDiff"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "scm": [
                {
                    "id": "csvDiffView",
                    "name": "CSV Changes"
                }
            ]
        },
        "commands": [
            {
                "command": "csvDiffViewer.refresh",
                "title": "Refresh CSV Changes",
                "icon": "$(refresh)"
            },
            {
                "command": "csvDiffViewer.showDiff",
                "title": "Show CSV Diff"
            },
            {
                "command": "csvDiffViewer.showStagedDiff",
                "title": "Show Staged Changes Diff"
            },
            {
                "command": "csvDiffViewer.showConflictDiff",
                "title": "Show Merge Conflict Diff"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "csvDiffViewer.refresh",
                    "when": "view == csvDiffView",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "command": "csvDiffViewer.showStagedDiff",
                    "when": "resourceExtname == .csv",
                    "group": "1_modification"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "csv-parse": "^5.5.3"
    }
}
